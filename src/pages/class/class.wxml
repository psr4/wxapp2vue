        <view class='category-wrapper'>
          <view class="item {{tab=='0'?'active':''}} " data-tab='0' catchtap='changetab'>{{cate_name}}<i class="iconfont icon-plus-select-down {{tab=='0'&&show?'active2':''}}"></i></view>
          <view class="item {{tab=='1'?'active':''}}" data-tab='1' catchtap='changetab'>附近<i class="iconfont icon-plus-select-down {{tab=='1'&&show?'active2':''}}"></i></view>

          <view class="item {{tab=='2'?'active':''}} " data-tab='2' catchtap='changetab'>商圈<i class="iconfont icon-plus-select-down {{tab=='2'&&show?'active2':''}}"></i></view>

          <view class="item {{tab=='3'?'active':''}} " data-tab='3' catchtap='changetab'>模式<i class="iconfont icon-plus-select-down {{tab=='3'&&show?'active2':''}}"></i></view>
        </view>


    <!--隐藏分类区  -->
            <view class=" {{show?'translate':'categoryTap'}}" >
                <view class='item-top'  wx:if="{{tab == '0'}}" >
                    <view class='cate-title'>全部分类</view>
                    <view class='cate-ul'>
                      <view wx:for="{{class}}" wx:key="class1" catchtap="bindChangeClass" data-id="{{item.id}}" data-index="{{index}}" data-name="{{item.name}}" class="li {{ item.id == classid ? 'active' : ''}}"  >{{item.name}}</view>
                    </view>
                </view>

                <view class='item-top'  wx:if="{{tab == '1'}}" >
                    <view class='cate-title'>附近</view>
                      <view class='cate-ul'>
                      <view bindtap='bindDistance' data-id='-1'  class='li sq {{distance_id==-1?"active":""}}'  >全部</view>
                      <view class='li sq {{distance_id==1?"active":""}}' bindtap='bindDistance' data-id='1'>1公里以内</view>
                      <view class='li sq {{distance_id==2?"active":""}}' bindtap='bindDistance' data-id='2'>1公里~2公里</view>
                      <view class='li sq {{distance_id==3?"active":""}}' bindtap='bindDistance' data-id='3'>2公里以上</view>
                    </view>
                </view>

                <view class='item-top'  wx:if="{{tab == '2'}}" >
                  <view class='cate-title'>泉州商圈</view>
                    <view class='cate-ul'>
                    <view bindtap='bindTradingArea' data-id='-1' class='li sq {{tradingArea_id==-1?"active":""}}'>全部</view>
                    <view bindtap='bindTradingArea'  class='li sq {{tradingArea_id==item.id?"active":""}}' data-id="{{item.id}}" wx:for="{{TradingArea}}">
                      {{item.name}}
                    </view>

                  </view>
                </view>

                <view class='item-top'  wx:if="{{tab == '3'}}" >
                  <view class='cate-title'>全部模式</view>
                    <view class='cate-ul ms-ul'>
                      <view bindtap='bindReturn' data-id='-1' class='li ms {{return_id==-1?"active":""}}'>全部</view>
                      <view bindtap='bindReturn' data-id='1' class='li ms {{return_id==1?"active":""}}'>有全返</view>
                      <view  bindtap='bindReturn' data-id='2' class='li ms {{return_id==2?"active":""}}'>无全返</view>
                  </view>
                </view>

                <view class='item-bottom' bindtap='cancelTap'></view>
            </view>


</view>

<view class='top'></view>



