        <view class='other'>
          <view class='cate'>{{item.cate_name}}</view>
          <view class='line'></view>
          <view class='distant'>{{item.distance}}</view>
        </view>
        <view class='address'>
          <image     src='/image/img/xiaochengxu_quanzhoushangquanlianmeng_shouye_tubiao_dizhi.png'
          ></image>
