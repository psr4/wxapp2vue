/* pages/accountdetial/accountdetail.wxss */
.box{
  margin: 10px 5px;
  border-radius: 3px;
  box-shadow: 0 0 4px #ccc;
  background: white;
}
.box .item{
  display: flex;
  border-bottom:solid 1px #ddd;
  padding:10px;
  font-size: 12px;
  color:#666;
}
.box .item .left{
  flex:1;
}
.box .item .right{
  flex: 0 0 20%;
  text-align:right;
}
.box .item .right .money{
  color:red;
  font-size:14px;
  font-weight: 600;
}
.tips{
  text-align: center;
  padding: 20px 0;
}