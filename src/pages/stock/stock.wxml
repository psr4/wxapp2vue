            联系客服
        </url>
    </view>
</scroll-view>

<view class='bor20'></view>


<view class='tyBi'>
    <url url='bi'>
        <view class='bi_title'>

            <view class='title_boom'>我的天羽币</view>

            <view class='more'>
                <i class="iconfont icon-return1"></i>
            </view>

        </view>
    </url>
    <scroll-view scroll-x>
        <view class='bi_list'>

            <view class='bi_li' wx:for="{{list[1]}}" data-id='{{item.id}}'>
                <url url='record?id={{item.id}}'>
                    <image src='/image/img/bi.png'></image>
                    <view class='bi'>{{item.id6}}</view>
                </url>
            </view>

            <view class='bi_li' wx:if="{{!list[1]||list[1].length==0}}">
                <view class='no'>暂无</view>
            </view>

        </view>
    </scroll-view>
</view>





