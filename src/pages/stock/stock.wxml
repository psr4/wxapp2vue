    <swiper autoplay="true">
        <swiper-item wx:key="*this" wx:for="{{arc}}">
            <view>
				<url url="/pages/article/article?id={{item.id}}&kfShow=1">
                	<image src="{{item.img}}"> </image>
				</url>
            </view>
        </swiper-item>
    </swiper>
</view>

<swiper autoplay='true' duration='1000' vertical='true' circular='true' class='swiGS'>
    <swiper-item>
        <view class='stockBox'>
            <view class='sto_item'>
                <image src='/image/img/deep.png'></image>
                <view class="sto_day">
                    <view wx:if="{{stock['isToday']}}"> 今</view>
                    <view wx:else>昨</view>
                </view>
                <view class='sto_bi'>
                    <view>{{stock.nowpri}}</view>
                    <view class='per'>{{stock.percent}}%</view>
                </view>
            </view>
            <view class='sto_item'>
                <image src='/image/img/bi.png'></image>
                <view class="sto_day">
                    <view>昨</view>
                    <view>今</view>
                </view>
                <view class='sto_bi'>
                    <view>{{stock.old_price}}</view>
                    <view>{{stock.price}}</view>
                </view>
            </view>
        </view>
    </swiper-item>
    <swiper-item>
        <view class='news'>
            <url url='/pages/article/article?cate_id={{ty_articles[0].cate_id}}'>
                <image src="/image/img/cj.png"></image>
                <view class='news_content'>
                    {{ty_articles[0]["title"]}}
                </view>
            </url>
        </view>
    </swiper-item>
</swiper>
<view class='bor20'></view>

