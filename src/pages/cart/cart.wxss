.cart{
  display: flex;
  height: 90rpx;
  width:100%;
  padding: 0 30rpx; 
  align-items: center;
  box-shadow: 0 1rpx 5rpx #dedede;
  box-sizing: border-box;
}
.cart .title{
  margin: 0 auto;
}


.product{
  display:flex;
  width: 100%;
  height: 200rpx; 
  align-items:center; 
  padding: 0 30rpx;
  border-bottom:10rpx solid #dedede;
}
.product .kong image{
  width:38rpx;
  height: 38rpx;
}
.product .proimg {
  margin:0 20rpx;
}
.product .proimg image{
  width: 140rpx;
  height: 140rpx;
}
.product .content{
  flex: 0 0 36%;
  align-items:flex-start;
}
.product .content .protitle{
  margin-bottom: 10rpx;
}
.product .content .price{
    color: #ef2f72;
  }
.product .shuliang .icon-jian,.product .shuliang .icon-jia{
  font-size: 36rpx;
}
.product .shuliang{
  flex: 0 0 30%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}


.totalbar{
  display: flex;
  height: 100rpx;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -1rpx 5rpx #dedede;
  position: fixed;
  bottom: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.totalbar .tick{
  display: flex;
}
.totalbar .tick .delete{
  margin-left: 28rpx;
}
.totalbar .tick image{
  width: 38rpx;
  height: 38rpx;
  margin-right: 15rpx;
}
.totalbar .total{
  display: flex;
  height: 100%;
  align-items: center;
}
.totalbar .total .value{
  color: #ef2f72;
}
.totalbar .total .totalbtn{
  width: 140rpx;
  height: 80rpx;
  margin: 0rpx 0 0 20rpx;
}
.totalbar .total .totalbtn .btn{
  background: #f5c816;
  color: #fff;
  font-size: 30rpx;
}
